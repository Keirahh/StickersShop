{% extends 'layout.html.twig' %}

{% block content %}
		<!-- Content
		============================================= -->

		<div class="content-wrap">

			<div class="container clearfix ">
					<!-- Shop
					============================================= -->


					{% for category in allCategory %}
						{% set test = 0 %}	
							<a href="categorie.php?cat={{ category.Category_Code }}"><h1 id="titre" class="col">Stickers {{category.Category_Name}}</h1></a>
							<div id="shop" class="shop clearfix">
								{% for result in stickers if category.Category_Code == result.Stickers_Category and test < 3 %}									
									<div class="product clearfix">
										<div class="product-image">
											<a href="ficheProduit.php?item={{ result.Stickers_Id }}"><img src="images/img/{{result.Stickers_Image}}" alt="{{ result.Stickers_Name }}"></a>
											<div class="product">
												<form action="panier.php?item={{ result.Stickers_Id }}" method="POST">
													<input type="number" name="Product_Quantity" value="1" id="quantity">
													<i class="icon-shopping-cart"></i><input type="submit" value="Add to Cart">
												</form>
											</div>
										</div>
										<div class="product-desc center">
											<div class="product-title"><h3><a href="ficheProduit.php?item={{ result.Stickers_Id }}">{{ result.Stickers_Name }}</a></h3></div>
											<div class="product-price"><ins>{{ result.Stickers_Prix }}$</ins></div>
											<div class="product-rating">
												<i class="icon-star3"></i>
												<i class="icon-star3"></i>
												<i class="icon-star3"></i>
												<i class="icon-star3"></i>
												<i class="icon-star-half-full"></i>
											</div>
										</div>
									</div>
									{% set test = test + 1 %}					
									{% endfor %}
								</div><!-- #shop end -->
							{% endfor %}
						</div>
					</div>
				{% endblock content %}